<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.huanghaidong.locallife.example.infrastructure.mapper.ShopMapper">

    <resultMap id="BaseResultMap" type="com.huanghaidong.locallife.example.infrastructure.ShopDO">
        <result column="id" jdbcType="INTEGER" property="id" />
        <result column="name" jdbcType="VARCHAR" property="name" />
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime" />
    </resultMap>

    <select id="selectByCondition" resultMap="BaseResultMap">
        select id, name, create_time, update_time from t_shop
        <where>
            <if test="condition.name != null">
                and name like concat('%', #{condition.name}, '%')
            </if>
        </where>

        <if test="condition.offset != null and condition.rows != null">
            limit #{condition.offset}, #{condition.rows}
        </if>
    </select>

</mapper>